@page "/services/christmas"
@rendermode InteractiveServer

<PageTitle>Christmas Concerts | Choral Expressions</PageTitle>

<!-- Hero Section -->
<section class="service-hero" style="background: linear-gradient(135deg, rgba(26, 5, 5, 0.9), rgba(13, 13, 13, 0.95)), url('https://images.unsplash.com/photo-1512389142860-9c449e58a814?auto=format&fit=crop&w=2000&q=80'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="row min-vh-75 align-items-center">
            <div class="col-lg-8">
                <a href="/#services" class="btn btn-outline-gold btn-sm rounded-pill mb-4">
                    <i class="bi bi-arrow-left me-2"></i>Back to Services
                </a>
                <h1 class="display-3 fw-bold text-white mb-3">
                    <i class="bi bi-star-fill text-gold me-3"></i>Christmas Concerts
                </h1>
                <p class="lead text-gold fs-4 mb-4">Experience the Magic of the Season</p>
                <p class="text-light-muted fs-5 mb-4">
                    From the reverent strains of "O Holy Night" to the jubilant celebration of "Joy to the World," 
                    our 33-voice ensemble brings the full majesty of Christmas to your venue.
                </p>
                <a href="/#contact" class="btn btn-gold btn-lg rounded-pill px-5">
                    <i class="bi bi-calendar-check me-2"></i>Book Your Christmas Event
                </a>
            </div>
        </div>
    </div>
</section>

<!-- What We Offer -->
<section class="section-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Our Christmas Repertoire</h2>
            <p class="section-subtitle">A tapestry of sacred and celebratory music</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-music-note-list fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Sacred Classics</h4>
                        <p class="card-text text-light-muted">
                            Handel's Messiah excerpts, Bach chorales, and traditional carols performed with 
                            reverence and artistry.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-globe fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">World Carols</h4>
                        <p class="card-text text-light-muted">
                            Celebrate diversity with carols from around the globe—African, Latin American, 
                            European, and Caribbean traditions.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-heart fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Beloved Favorites</h4>
                        <p class="card-text text-light-muted">
                            "Silent Night," "The First Noel," "Hark! The Herald Angels Sing"—the songs 
                            that warm hearts and create memories.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Perfect For Section -->
<section class="section-burgundy">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <h2 class="section-title text-white">Perfect For</h2>
                <ul class="list-unstyled mt-4">
                    <li class="d-flex align-items-start mb-4">
                        <i class="bi bi-check-circle-fill text-gold fs-4 me-3 mt-1"></i>
                        <div>
                            <h5 class="text-white mb-1">Church Christmas Services</h5>
                            <p class="text-light-muted mb-0">Enhance your Christmas Eve or Christmas Day worship with professional choral music.</p>
                        </div>
                    </li>
                    <li class="d-flex align-items-start mb-4">
                        <i class="bi bi-check-circle-fill text-gold fs-4 me-3 mt-1"></i>
                        <div>
                            <h5 class="text-white mb-1">Corporate Holiday Galas</h5>
                            <p class="text-light-muted mb-0">Impress clients and celebrate your team with elegant musical entertainment.</p>
                        </div>
                    </li>
                    <li class="d-flex align-items-start mb-4">
                        <i class="bi bi-check-circle-fill text-gold fs-4 me-3 mt-1"></i>
                        <div>
                            <h5 class="text-white mb-1">Community Tree Lightings</h5>
                            <p class="text-light-muted mb-0">Create a magical atmosphere for your neighborhood or city celebration.</p>
                        </div>
                    </li>
                    <li class="d-flex align-items-start">
                        <i class="bi bi-check-circle-fill text-gold fs-4 me-3 mt-1"></i>
                        <div>
                            <h5 class="text-white mb-1">Private Holiday Parties</h5>
                            <p class="text-light-muted mb-0">Make your home celebration unforgettable with live choral performance.</p>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-lg-6">
                <div class="donation-card">
                    <h3 class="text-gold mb-4"><i class="bi bi-calendar-event me-2"></i>Book Early</h3>
                    <p class="text-light-muted mb-4">
                        Christmas is our most requested season. Secure your date early to ensure availability 
                        for your special event.
                    </p>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-clock text-gold fs-4 me-3"></i>
                        <span class="text-white">30-90 minute performances available</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-people text-gold fs-4 me-3"></i>
                        <span class="text-white">Full choir or smaller ensembles</span>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <i class="bi bi-geo-alt text-gold fs-4 me-3"></i>
                        <span class="text-white">Greater Toronto Area & beyond</span>
                    </div>
                    <a href="/#contact" class="btn btn-gold w-100 rounded-pill">
                        <i class="bi bi-envelope me-2"></i>Request a Quote
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section-dark text-center py-5">
    <div class="container">
        <h2 class="text-white mb-3">Ready to Make This Christmas Unforgettable?</h2>
        <p class="text-light-muted mb-4">Contact us today to discuss your vision and reserve your date.</p>
        <a href="/#contact" class="btn btn-gold btn-lg rounded-pill px-5">
            <i class="bi bi-send me-2"></i>Get Started
        </a>
    </div>
</section>

<style>
    .service-hero {
        padding: 120px 0 80px;
    }
    .min-vh-75 {
        min-height: 75vh;
    }
</style>
