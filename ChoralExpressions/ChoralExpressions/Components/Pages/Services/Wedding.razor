@page "/services/wedding"
@rendermode InteractiveServer

<PageTitle>Wedding Ceremonies | Choral Expressions</PageTitle>

<!-- Hero Section -->
<section class="service-hero" style="background: linear-gradient(135deg, rgba(26, 5, 5, 0.9), rgba(13, 13, 13, 0.95)), url('https://images.unsplash.com/photo-1519741497674-611481863552?auto=format&fit=crop&w=2000&q=80'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="row min-vh-75 align-items-center">
            <div class="col-lg-8">
                <a href="/#services" class="btn btn-outline-gold btn-sm rounded-pill mb-4">
                    <i class="bi bi-arrow-left me-2"></i>Back to Services
                </a>
                <h1 class="display-3 fw-bold text-white mb-3">
                    <i class="bi bi-heart-fill text-gold me-3"></i>Wedding Ceremonies
                </h1>
                <p class="lead text-gold fs-4 mb-4">Your Love Story, Set to Music</p>
                <p class="text-light-muted fs-5 mb-4">
                    Make your wedding day truly unforgettable with the breathtaking sound of 33 voices 
                    celebrating your love. From the processional to the recessional, we create moments 
                    that will be treasured forever.
                </p>
                <a href="/#contact" class="btn btn-gold btn-lg rounded-pill px-5">
                    <i class="bi bi-calendar-check me-2"></i>Book Your Wedding
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Wedding Moments Section -->
<section class="section-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Every Moment, Perfectly Scored</h2>
            <p class="section-subtitle">Music that enhances each precious moment</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-burgundy d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-door-open fs-2 text-gold"></i>
                        </div>
                        <h5 class="card-title">Prelude</h5>
                        <p class="card-text text-light-muted small">
                            Set the tone as guests arrive with elegant choral music that builds anticipation.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-burgundy d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-arrow-right fs-2 text-gold"></i>
                        </div>
                        <h5 class="card-title">Processional</h5>
                        <p class="card-text text-light-muted small">
                            The moment everyone waits for—your entrance, accompanied by breathtaking harmonies.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-burgundy d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-heart fs-2 text-gold"></i>
                        </div>
                        <h5 class="card-title">Ceremony</h5>
                        <p class="card-text text-light-muted small">
                            Special selections during unity ceremonies, readings, or quiet reflection.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-burgundy d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-emoji-smile fs-2 text-gold"></i>
                        </div>
                        <h5 class="card-title">Recessional</h5>
                        <p class="card-text text-light-muted small">
                            Celebrate your new beginning with joyful music as you walk out as newlyweds.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Popular Selections -->
<section class="section-burgundy">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <h2 class="section-title text-white">Popular Wedding Selections</h2>
                <p class="section-subtitle mb-4">Timeless classics and modern favorites</p>
                
                <div class="row g-3">
                    <div class="col-12">
                        <div class="p-3 bg-dark-surface rounded d-flex align-items-center">
                            <i class="bi bi-music-note-beamed text-gold fs-4 me-3"></i>
                            <div>
                                <h6 class="text-white mb-0">"Ave Maria"</h6>
                                <small class="text-light-muted">Schubert / Bach-Gounod</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="p-3 bg-dark-surface rounded d-flex align-items-center">
                            <i class="bi bi-music-note-beamed text-gold fs-4 me-3"></i>
                            <div>
                                <h6 class="text-white mb-0">"Canon in D"</h6>
                                <small class="text-light-muted">Pachelbel (choral arrangement)</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="p-3 bg-dark-surface rounded d-flex align-items-center">
                            <i class="bi bi-music-note-beamed text-gold fs-4 me-3"></i>
                            <div>
                                <h6 class="text-white mb-0">"The Prayer"</h6>
                                <small class="text-light-muted">Bocelli & Dion</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="p-3 bg-dark-surface rounded d-flex align-items-center">
                            <i class="bi bi-music-note-beamed text-gold fs-4 me-3"></i>
                            <div>
                                <h6 class="text-white mb-0">"A Thousand Years"</h6>
                                <small class="text-light-muted">Christina Perri</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="donation-card">
                    <h3 class="text-gold mb-4"><i class="bi bi-gem me-2"></i>Wedding Packages</h3>
                    
                    <div class="mb-4 pb-4 border-bottom border-gold">
                        <h5 class="text-white">Ceremony Package</h5>
                        <p class="text-light-muted small mb-2">Perfect for the ceremony itself</p>
                        <ul class="list-unstyled text-light-muted small">
                            <li><i class="bi bi-check text-gold me-2"></i>Prelude (15-20 min)</li>
                            <li><i class="bi bi-check text-gold me-2"></i>Processional</li>
                            <li><i class="bi bi-check text-gold me-2"></i>1-2 ceremony selections</li>
                            <li><i class="bi bi-check text-gold me-2"></i>Recessional</li>
                        </ul>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="text-white">Full Celebration Package</h5>
                        <p class="text-light-muted small mb-2">Ceremony + cocktail hour</p>
                        <ul class="list-unstyled text-light-muted small">
                            <li><i class="bi bi-check text-gold me-2"></i>Everything in Ceremony Package</li>
                            <li><i class="bi bi-check text-gold me-2"></i>Cocktail hour performance</li>
                            <li><i class="bi bi-check text-gold me-2"></i>Custom song requests</li>
                        </ul>
                    </div>
                    
                    <a href="/#contact" class="btn btn-gold w-100 rounded-pill">
                        <i class="bi bi-envelope me-2"></i>Get a Custom Quote
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonial -->
<section class="section-dark py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <i class="bi bi-quote fs-1 text-gold mb-3 d-block"></i>
                <blockquote class="fs-4 text-white fst-italic mb-4">
                    "When the choir began to sing as I walked down the aisle, there wasn't a dry eye 
                    in the church. It was the most magical moment of our entire wedding."
                </blockquote>
                <p class="text-gold">— Sarah & Michael, Toronto</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section-burgundy text-center py-5">
    <div class="container">
        <h2 class="text-white mb-3">Begin Your Forever with Beautiful Music</h2>
        <p class="text-light-muted mb-4">Let us help you create the wedding of your dreams.</p>
        <a href="/#contact" class="btn btn-gold btn-lg rounded-pill px-5">
            <i class="bi bi-send me-2"></i>Start Planning
        </a>
    </div>
</section>

<style>
    .service-hero {
        padding: 120px 0 80px;
    }
    .min-vh-75 {
        min-height: 75vh;
    }
    .bg-dark-surface {
        background-color: rgba(0,0,0,0.3);
    }
    .bg-burgundy {
        background: linear-gradient(145deg, #2b1111, #1a0505);
    }
</style>
