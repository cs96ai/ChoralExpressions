@page "/services/celebration-of-life"
@rendermode InteractiveServer

<PageTitle>Celebration of Life | Choral Expressions</PageTitle>

<!-- Hero Section -->
<section class="service-hero" style="background: linear-gradient(135deg, rgba(26, 5, 5, 0.9), rgba(13, 13, 13, 0.95)), url('https://images.unsplash.com/photo-1501854140801-50d01698950b?auto=format&fit=crop&w=2000&q=80'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="row min-vh-75 align-items-center">
            <div class="col-lg-8">
                <a href="/#services" class="btn btn-outline-gold btn-sm rounded-pill mb-4">
                    <i class="bi bi-arrow-left me-2"></i>Back to Services
                </a>
                <h1 class="display-3 fw-bold text-white mb-3">
                    <i class="bi bi-flower1 text-gold me-3"></i>Celebration of Life
                </h1>
                <p class="lead text-gold fs-4 mb-4">Honoring a Life Well Lived</p>
                <p class="text-light-muted fs-5 mb-4">
                    In moments of remembrance, music speaks when words cannot. Our choir provides 
                    comfort, beauty, and dignity as you gather to celebrate the life of someone dear.
                </p>
                <a href="/#contact" class="btn btn-gold btn-lg rounded-pill px-5">
                    <i class="bi bi-calendar-check me-2"></i>Arrange a Service
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Our Approach Section -->
<section class="section-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Music That Comforts and Uplifts</h2>
            <p class="section-subtitle">With sensitivity and grace</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body p-4">
                        <i class="bi bi-heart fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Compassionate Service</h4>
                        <p class="card-text text-light-muted">
                            We understand this is a tender time. Our team works with you sensitively 
                            to select music that honors your loved one's memory and brings comfort 
                            to those gathered.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body p-4">
                        <i class="bi bi-person-heart fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Personalized Selection</h4>
                        <p class="card-text text-light-muted">
                            Whether it's a beloved hymn, a favorite song, or a piece that captures 
                            their spirit, we customize our program to reflect the unique life being celebrated.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body p-4">
                        <i class="bi bi-brightness-high fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Hope and Healing</h4>
                        <p class="card-text text-light-muted">
                            Our music is chosen not only to mourn but to celebrate—to remind us of 
                            the beauty of life and the hope that sustains us through grief.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Repertoire Section -->
<section class="section-burgundy">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <h2 class="section-title text-white">Meaningful Selections</h2>
                <p class="section-subtitle mb-4">Music for remembrance and hope</p>
                
                <div class="mb-4">
                    <h5 class="text-gold mb-3"><i class="bi bi-music-note-list me-2"></i>Sacred & Traditional</h5>
                    <ul class="list-unstyled text-light-muted">
                        <li class="mb-2"><i class="bi bi-dot text-gold"></i> "Amazing Grace"</li>
                        <li class="mb-2"><i class="bi bi-dot text-gold"></i> "How Great Thou Art"</li>
                        <li class="mb-2"><i class="bi bi-dot text-gold"></i> "Be Still My Soul"</li>
                        <li class="mb-2"><i class="bi bi-dot text-gold"></i> "The Lord's Prayer"</li>
                        <li><i class="bi bi-dot text-gold"></i> "Abide With Me"</li>
                    </ul>
                </div>
                
                <div>
                    <h5 class="text-gold mb-3"><i class="bi bi-music-note-list me-2"></i>Contemporary & Reflective</h5>
                    <ul class="list-unstyled text-light-muted">
                        <li class="mb-2"><i class="bi bi-dot text-gold"></i> "You Raise Me Up"</li>
                        <li class="mb-2"><i class="bi bi-dot text-gold"></i> "Wind Beneath My Wings"</li>
                        <li class="mb-2"><i class="bi bi-dot text-gold"></i> "I Will Remember You"</li>
                        <li><i class="bi bi-dot text-gold"></i> "Hallelujah" (Leonard Cohen)</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="donation-card">
                    <h3 class="text-gold mb-4"><i class="bi bi-info-circle me-2"></i>How We Can Help</h3>
                    
                    <div class="d-flex align-items-start mb-4">
                        <i class="bi bi-check-circle-fill text-gold fs-4 me-3 mt-1"></i>
                        <div>
                            <h6 class="text-white mb-1">Funeral Services</h6>
                            <p class="text-light-muted small mb-0">Traditional funeral masses and services at churches, funeral homes, or graveside.</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-start mb-4">
                        <i class="bi bi-check-circle-fill text-gold fs-4 me-3 mt-1"></i>
                        <div>
                            <h6 class="text-white mb-1">Memorial Celebrations</h6>
                            <p class="text-light-muted small mb-0">Uplifting gatherings that focus on celebrating a life well lived.</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-start mb-4">
                        <i class="bi bi-check-circle-fill text-gold fs-4 me-3 mt-1"></i>
                        <div>
                            <h6 class="text-white mb-1">Anniversary Memorials</h6>
                            <p class="text-light-muted small mb-0">Annual remembrance services honoring loved ones.</p>
                        </div>
                    </div>
                    
                    <hr class="border-gold my-4">
                    <p class="text-light-muted small mb-3">
                        <i class="bi bi-clock me-2"></i>We can often accommodate services on short notice.
                    </p>
                    <a href="/#contact" class="btn btn-gold w-100 rounded-pill">
                        <i class="bi bi-telephone me-2"></i>Contact Us
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quote Section -->
<section class="section-dark py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <i class="bi bi-quote fs-1 text-gold mb-3 d-block"></i>
                <blockquote class="fs-4 text-white fst-italic mb-4">
                    "Music is the shorthand of emotion."
                </blockquote>
                <p class="text-gold">— Leo Tolstoy</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section-burgundy text-center py-5">
    <div class="container">
        <h2 class="text-white mb-3">We're Here to Help</h2>
        <p class="text-light-muted mb-4">Let us provide comfort through music during this difficult time.</p>
        <a href="/#contact" class="btn btn-gold btn-lg rounded-pill px-5">
            <i class="bi bi-envelope me-2"></i>Reach Out to Us
        </a>
    </div>
</section>

<style>
    .service-hero {
        padding: 120px 0 80px;
    }
    .min-vh-75 {
        min-height: 75vh;
    }
</style>
