@page "/services/black-history-month"
@rendermode InteractiveServer

<PageTitle>Black History Month | Choral Expressions</PageTitle>

<!-- Hero Section -->
<section class="service-hero" style="background: linear-gradient(135deg, rgba(26, 5, 5, 0.9), rgba(13, 13, 13, 0.95)), url('https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?auto=format&fit=crop&w=2000&q=80'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="row min-vh-75 align-items-center">
            <div class="col-lg-8">
                <a href="/#services" class="btn btn-outline-gold btn-sm rounded-pill mb-4">
                    <i class="bi bi-arrow-left me-2"></i>Back to Services
                </a>
                <h1 class="display-3 fw-bold text-white mb-3">
                    <i class="bi bi-music-note-beamed text-gold me-3"></i>Black History Month
                </h1>
                <p class="lead text-gold fs-4 mb-4">Celebrating Heritage Through Song</p>
                <p class="text-light-muted fs-5 mb-4">
                    Experience the profound beauty of spirituals, the power of gospel, and the rich 
                    musical traditions that have shaped history and continue to inspire generations.
                </p>
                <a href="/#contact" class="btn btn-gold btn-lg rounded-pill px-5">
                    <i class="bi bi-calendar-check me-2"></i>Book Your Event
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Musical Heritage Section -->
<section class="section-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">A Musical Journey Through History</h2>
            <p class="section-subtitle">Songs of faith, freedom, and resilience</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body p-4">
                        <i class="bi bi-heart-fill fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Spirituals</h4>
                        <p class="card-text text-light-muted">
                            The soul-stirring songs born from struggle and faith. "Swing Low, Sweet Chariot," 
                            "Deep River," "Wade in the Water"—music that carries the weight of history 
                            and the hope of freedom.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body p-4">
                        <i class="bi bi-lightning-fill fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Gospel</h4>
                        <p class="card-text text-light-muted">
                            The joyful, powerful sound of gospel music. From Thomas Dorsey to Kirk Franklin, 
                            we bring the energy and spirit of this transformative tradition to your event.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body p-4">
                        <i class="bi bi-people-fill fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Freedom Songs</h4>
                        <p class="card-text text-light-muted">
                            The anthems of the Civil Rights Movement. "We Shall Overcome," "Lift Every Voice 
                            and Sing"—songs that moved a nation and continue to inspire change.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Program Options -->
<section class="section-burgundy">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <h2 class="section-title text-white">Program Options</h2>
                <p class="section-subtitle mb-4">Customized for your audience and venue</p>
                
                <div class="mb-4 p-4 bg-dark-surface rounded">
                    <h5 class="text-gold mb-2"><i class="bi bi-mortarboard me-2"></i>Educational Programs</h5>
                    <p class="text-light-muted mb-0">
                        Perfect for schools and universities. Our presentations combine performance with 
                        historical context, teaching the significance of each song and its place in history.
                    </p>
                </div>
                
                <div class="mb-4 p-4 bg-dark-surface rounded">
                    <h5 class="text-gold mb-2"><i class="bi bi-building me-2"></i>Corporate Celebrations</h5>
                    <p class="text-light-muted mb-0">
                        Honor Black History Month in your workplace with a powerful musical experience 
                        that celebrates diversity and inspires unity.
                    </p>
                </div>
                
                <div class="p-4 bg-dark-surface rounded">
                    <h5 class="text-gold mb-2"><i class="bi bi-house-heart me-2"></i>Community Events</h5>
                    <p class="text-light-muted mb-0">
                        Libraries, community centers, and cultural organizations—we bring the community 
                        together through the shared experience of music.
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="donation-card">
                    <h3 class="text-gold mb-4"><i class="bi bi-mic me-2"></i>Featured Repertoire</h3>
                    <ul class="list-unstyled">
                        <li class="d-flex align-items-center mb-3 text-white">
                            <i class="bi bi-music-note text-gold me-3"></i>
                            "Lift Every Voice and Sing"
                        </li>
                        <li class="d-flex align-items-center mb-3 text-white">
                            <i class="bi bi-music-note text-gold me-3"></i>
                            "Total Praise" – Richard Smallwood
                        </li>
                        <li class="d-flex align-items-center mb-3 text-white">
                            <i class="bi bi-music-note text-gold me-3"></i>
                            "Elijah Rock" – arr. Moses Hogan
                        </li>
                        <li class="d-flex align-items-center mb-3 text-white">
                            <i class="bi bi-music-note text-gold me-3"></i>
                            "Soon I Will Be Done"
                        </li>
                        <li class="d-flex align-items-center mb-3 text-white">
                            <i class="bi bi-music-note text-gold me-3"></i>
                            "Glory" – from Selma
                        </li>
                        <li class="d-flex align-items-center text-white">
                            <i class="bi bi-music-note text-gold me-3"></i>
                            "We Shall Overcome"
                        </li>
                    </ul>
                    <hr class="border-gold my-4">
                    <a href="/#contact" class="btn btn-gold w-100 rounded-pill">
                        <i class="bi bi-envelope me-2"></i>Plan Your Event
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quote Section -->
<section class="section-dark py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <i class="bi bi-quote fs-1 text-gold mb-3 d-block"></i>
                <blockquote class="display-6 text-white fst-italic mb-4">
                    "Music is a world within itself, with a language we all understand."
                </blockquote>
                <p class="text-gold">— Stevie Wonder</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section-burgundy text-center py-5">
    <div class="container">
        <h2 class="text-white mb-3">Celebrate Black History Month with Purpose</h2>
        <p class="text-light-muted mb-4">Let music tell the story of resilience, faith, and triumph.</p>
        <a href="/#contact" class="btn btn-gold btn-lg rounded-pill px-5">
            <i class="bi bi-send me-2"></i>Book Choral Expressions
        </a>
    </div>
</section>

<style>
    .service-hero {
        padding: 120px 0 80px;
    }
    .min-vh-75 {
        min-height: 75vh;
    }
    .bg-dark-surface {
        background-color: rgba(0,0,0,0.3);
    }
</style>
