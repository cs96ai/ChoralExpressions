@page "/services/store-opening"
@rendermode InteractiveServer

<PageTitle>Store Openings & Grand Openings | Choral Expressions</PageTitle>

<!-- Hero Section -->
<section class="service-hero" style="background: linear-gradient(135deg, rgba(26, 5, 5, 0.9), rgba(13, 13, 13, 0.95)), url('https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?auto=format&fit=crop&w=2000&q=80'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="row min-vh-75 align-items-center">
            <div class="col-lg-8">
                <a href="/#services" class="btn btn-outline-gold btn-sm rounded-pill mb-4">
                    <i class="bi bi-arrow-left me-2"></i>Back to Services
                </a>
                <h1 class="display-3 fw-bold text-white mb-3">
                    <i class="bi bi-shop text-gold me-3"></i>Store & Grand Openings
                </h1>
                <p class="lead text-gold fs-4 mb-4">Launch with Impact</p>
                <p class="text-light-muted fs-5 mb-4">
                    Make your grand opening an event people will talk about. Our choir creates an 
                    atmosphere of celebration and excitement that draws crowds and creates buzz.
                </p>
                <a href="/#contact" class="btn btn-gold btn-lg rounded-pill px-5">
                    <i class="bi bi-calendar-check me-2"></i>Book Your Opening
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Why Live Music Section -->
<section class="section-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Why Live Choral Music?</h2>
            <p class="section-subtitle">Create an unforgettable first impression</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body p-4 text-center">
                        <i class="bi bi-megaphone fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Draw Attention</h4>
                        <p class="card-text text-light-muted">
                            The sound of 33 voices carries. Passersby stop, look, and come to see 
                            what's happening. It's marketing that can't be ignored.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body p-4 text-center">
                        <i class="bi bi-camera-video fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Social Media Gold</h4>
                        <p class="card-text text-light-muted">
                            Customers love sharing unique experiences. A live choir performance 
                            generates organic content that spreads across platforms.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card service-card h-100 text-white border-0">
                    <div class="card-body p-4 text-center">
                        <i class="bi bi-gem fs-1 text-gold mb-3 d-block"></i>
                        <h4 class="card-title">Premium Positioning</h4>
                        <p class="card-text text-light-muted">
                            Live choral music signals quality and sophistication. It tells customers 
                            your brand is special from day one.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

